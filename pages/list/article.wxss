.nav {
  display: flex;
  background: #3bb4f2;
  white-space: nowrap;
}
.nav navigator {
  display: inline-block;
  padding: 10px 15px;
  color: #fff;
  font-weight: 600;
}
swiper {
  width: 100%;
  height: 400rpx;
}
.slide-img image {
  width: 100%;
  height: 400rpx;
}
.main {
  padding: 0 20rpx 20rpx;
}
.main > image {
  padding-right: 20rpx;
}
.main .cont {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}
.cont>text {
   font-size: 28rpx;
}
.cont .box-left {
  display: flex;
  color: #bbb;
  align-items: center; 
  justify-content: space-around;
}
.list-box {
  display: flex;
  padding:10px 0;
  font-size: 24rpx;
  border-bottom:1px solid #eee;

}
.list-box>image {
  padding-right: 20rpx;
  width: 322rpx;
  height: 162rpx;
}
.box-left image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 80px;
  border: 1px solid #ccc;
}
